<UserControl x:Class="WPFUI.CustomControls.InventoryButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUI.CustomControls"
             mc:Ignorable="d" 
             AllowDrop="True" 
             d:DesignHeight="100" d:DesignWidth="100" Drop="UserControl_Drop">
    <Button x:Name="button">
        <Image x:Name="image" MouseDown="image_MouseDown" ></Image>
    </Button>
    
</UserControl>
